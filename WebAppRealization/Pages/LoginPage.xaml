<Page x:Class="WebAppIImpl.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WebAppIImpl.Pages"
      mc:Ignorable="d"
      Title="LoginPage" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Username"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0 0 0 10" />
            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0 0 0 10" />
            <Button 
                Content="Login" 
                Width="100" 
                HorizontalAlignment="Center" 
                Margin="0 0 0 10"
                Click="LoginButton_Click" />
            <Button 
                Content="Registration" 
                Width="100" 
                HorizontalAlignment="Center" 
                Click="RegistrationButton_Click" />
        </StackPanel>
    </Grid>
</Page>
